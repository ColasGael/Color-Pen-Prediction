<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@color/colorBackground"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".FirstActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:text="COLOR PEN PREDICTION"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:id="@+id/textView" />

    <Button
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:text="Débuter le tour"
        android:background="@color/colorButton"
        android:textColor="@color/white"
        android:drawableLeft = "@drawable/icone_scan"
        android:paddingLeft = "15dp"
        android:id="@+id/boutonScan"
        android:onClick="lancerScan"/>

    <Button
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:text="Gérer la detection"
        android:background="@color/colorButton"
        android:textColor="@color/white"
        android:id="@+id/boutonDetection"
        android:paddingLeft = "15dp"
        android:drawableLeft = "@drawable/icone_detection"
        android:onClick="gererDetection"/>

    <Button
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:text="Gérer les vibrations"
        android:drawableLeft = "@drawable/icone_vibrations"
        android:paddingLeft = "15dp"
        android:background="@color/colorButton"
        android:textColor="@color/white"
        android:id="@+id/boutonVibrations"
        android:onClick="gererVibrations"/>




</LinearLayout>
